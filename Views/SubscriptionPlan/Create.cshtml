@model BikesTest.Models.SubscriptionPlan

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Subscription</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="name" class="control-label"></label>
				<input asp-for="name" class="form-control" />
				<span asp-validation-for="name" class="text-danger"></span>
			</div>


			@for (int i = 0; i < 7; i++)
			{
				<div style="display:flex; flex-direction:row;">
					<div style="display: flex; flex-direction: row;" class="form-group">
						<label asp-for="subscriptionDays[i].day" class="control-label">@Enum.GetName(typeof(DayOfWeek), i)</label>
						<input asp-for="subscriptionDaysBool[i]" type="checkbox"  class="form-control" />
						<span asp-validation-for="subscriptionDays[i].day" class="text-danger"></span>
					</div>

					<div style="display:flex; flex-direction:row;" class="form-group">
						<label asp-for="subscriptionDays[i].startTime" class="control-label"></label>
						<input asp-for="subscriptionDays[i].startTime" type="time" class="form-control" />
						<span asp-validation-for="subscriptionDays[i].startTime" class="text-danger"></span>
					</div>

					<div style="display:flex; flex-direction:row;" class="form-group">
						<label asp-for="subscriptionDays[i].endTime" class="control-label"></label>
						<input asp-for="subscriptionDays[i].endTime" type="time" class="form-control" />
						<span asp-validation-for="subscriptionDays[i].endTime" class="text-danger"></span>
					</div>
				</div>
			}

			<div class="form-group">
				<label asp-for="price" class="control-label"></label>
				<input asp-for="price" class="form-control" />
				<span asp-validation-for="price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

