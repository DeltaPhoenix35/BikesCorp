@model IEnumerable<BikesTest.Models.CouponType>

	@{ ViewData["Title"] = "Prizes";
					var customer = ViewBag.customer; }

	<h1>Coupons</h1>

	<div class="profile-menu-content">
		<h4>You currently have @customer.points points</h4>
		<table class="table">
			<thead>
				<tr>
					<th>
						@Html.DisplayNameFor(model => model.value)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.weeksToExpire)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.pointsToRedeem)
					</th>
					<th>
						@Html.DisplayNameFor(model => model.isDeleted)
					</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model)
				{
	<tr>
		<td>
			@Html.DisplayFor(modelItem => item.value)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.weeksToExpire)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.pointsToRedeem)
		</td>
		<td>
			@Html.DisplayFor(modelItem => item.isDeleted)
		</td>
		<td>
			<a asp-controller="Coupon" asp-action="RedeemCoupon" asp-route-id="@item.id">Redeem</a>
		</td>
	</tr>			}
			</tbody>
		</table>

		<div>
			<a asp-controller="Customer" asp-action="Redeem" asp-route-id="@customer.id">Back to List</a>
		</div>

		@section Scripts {
			@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
		}
	</div>
