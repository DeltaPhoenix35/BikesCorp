@model BikesTest.Models.BicycleContract

@{
	ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
	<h4>BicycleContract</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.customer)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.customer.id)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.bicycle.bicycleType)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.bicycle.bicycleType.typeName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.moreInfo)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.moreInfo)
		</dd>
	</dl>
</div>
<div>
	<a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
	<a asp-action="Index">Back to List</a>
</div>

@if (User.IsInRole("Admin"))
{
	<div>
		<a asp-action="Confirm" asp-route-id="@Model.id" class="btn btn-success">Confirm</a>
		<a asp-action="Deny" asp-route-id="@Model.id" class="btn btn-danger">Deny</a>
	</div>
}
<div>
	<a asp-action="Cancel" asp-route-id="@Model.id" class="btn btn-danger">Cancel</a>
</div>