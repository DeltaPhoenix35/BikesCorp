@using System.Security.Claims;

<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - BikesCo</title>
	<link rel="shortcut icon" href="/images/icon.ico" type="image/x-icon">
	@* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
	<link rel="stylesheet" href="~/css/site.css" />
	@* Fonts *@
	<script src="https://kit.fontawesome.com/d830b2bc10.js" crossorigin="anonymous"></script>
	<link href="https://fonts.googleapis.com/css2?family=Berkshire+Swash&family=Comfortaa&family=Fjalla+One&family=Merriweather+Sans:wght@300;400&family=Montserrat:wght@400;500;600&family=Playfair+Display:ital,wght@0,400;0,500;0,700;0,900;1,900&family=Roboto+Condensed:wght@700&display=swap" rel="stylesheet">
	@* Bootstrap *@
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
	@* JQuery *@
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>
<body>
	<header>
		<div class="navbar-container">
			<nav class="navbar navbar-expand-lg navbar-dark">
				<a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-bicycle" style="color: #fff;"></i> BikesCo</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#Menu" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="Menu">
					<ul class="navbar-nav flex-grow-1">
						@if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
						{
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Bicycles" asp-action="Index">Bicycles</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="BicycleTypes" asp-action="Index">Bicycle Types</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Index">Customers</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="CouponTypes" asp-action="Index">Coupons</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Admins" asp-action="Index">Admins</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Transactions" asp-action="Index">Transactions</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Reservations" asp-action="Index">Reservations</a>
							</li>
						}
						else if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
							<a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Details" asp-route-id="@User.Identities.First().FindFirst("Id").Value">My Profile</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="BicycleTypes" asp-action="Index">Our Bicycles</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Reservations" asp-action="Create" asp-route-id="@User.Identities.First().FindFirst("Id").Value">Reserve a Bike</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Reservations" asp-action="Index" asp-route-id="@User.Identities.First().FindFirst("Id").Value">My Reservations</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Transactions" asp-action="Index" asp-route-id="@User.Identities.First().FindFirst("Id").Value">My Rentals</a>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="BicycleTypes" asp-action="Index">Our Bicycles</a>
							</li>
						}
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="BicycleContracts" asp-action="Index" asp-route-id="@User.Identities.First().FindFirst("Id").Value">My Contracts</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="SubscriptionPlan" asp-action="Index">Plans</a>
							</li>
						}


					</ul>
					<ul class="navbar-nav d-flex justify-content-end flex-grow-1">
						@if (User.Identity.IsAuthenticated)
						{
							<li class="nav-item">
								<a class="btn btn-danger" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
							</li>
						}
						else
						{
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Home" asp-action="login"><i class="fa-solid fa-right-to-bracket"></i> Login</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" asp-area="" asp-controller="Customer" asp-action="Create"><i class="fa-solid fa-user-plus"></i> Register</a>
							</li>
						}
					</ul>
				</div>
		</div>
		</nav>
	</header>

	<div class="container-fluid-div">
		<main role="main" class="">
			@RenderBody()
		</main>
	</div>
	<footer class="border-top footer text-muted" style="margin-top: auto; text-align: center;">
		<div class="container-fluid">
			&copy; 2021 - BikesCo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/script.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
