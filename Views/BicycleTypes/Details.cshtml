@model BikesTest.Models.BicycleType

@{
    ViewData["Title"] = "Details";
}

<div class="container">
	<h1>Details</h1>

	<h4>BicycleType</h4>
	<hr />
	<dl class="row">
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.typeName)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.typeName)
		</dd>
		<dt class="col-sm-2">
			@Html.DisplayNameFor(model => model.description)
		</dt>
		<dd class="col-sm-10">
			@Html.DisplayFor(model => model.description)
		</dd>
	</dl>	
	<table style="width:100%; text-align:center;">
		<tr style="border: 1px solid; border-color:lightgrey; border-collapse: collapse;">
			<th class="table-header-background" >Duration</th>
			<th class="table-header-background" >Hour</th>
			<th class="table-header-background">1 Day</th>
			<th class="table-header-background">2 Days</th>
			<th class="table-header-background">3 Days</th>
			<th class="table-header-background">4 Days</th>
			<th class="table-header-background">5 Days</th>
			<th class="table-header-background">6 Days</th>
		</tr>

		<tr style="border:1px solid; border-color:lightgrey; border-collapse:collapse;">
			<th class="table-header-background">Cost</th>
			<td>@Html.DisplayFor(model => model.pricing.perHour)</td>

			<td>@Html.DisplayFor(model => model.pricing.per1Day)</td>

			<td>@Html.DisplayFor(model => model.pricing.per2Days)</td>

			<td>@Html.DisplayFor(model => model.pricing.per3Days)</td>

			<td>@Html.DisplayFor(model => model.pricing.per4Days)</td>

			<td>@Html.DisplayFor(model => model.pricing.per5Days)</td>

			<td>@Html.DisplayFor(model => model.pricing.perExtraDay)</td>
		</tr>	
	</table>

	<div>
		<a asp-action="Edit" asp-route-id="@Model.id">Edit</a> |
		<a asp-action="Index">Back to List</a>
	</div>
</div>